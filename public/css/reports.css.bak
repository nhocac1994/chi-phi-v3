  color: var(--dark-text-primary) !important;
}

.positive-change {
  color: var(--dark-success);
  font-weight: 600;
}

.negative-change {
  color: var(--dark-danger);
  font-weight: 600;
}

.positive-change i, .negative-change i {
  margin-right: 0.25rem;
}

/* Comparison Section */
.reports-comparison-options {
  background: var(--bg-secondary);
