  padding: 1.5rem;
  margin-bottom: 2rem;
}

.reports-comparison-group {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.reports-comparison-buttons {
  display: flex;
  gap: 0.5rem;
  background: var(--card-bg);
  padding: 0.5rem;
  border-radius: 0.75rem;
}

.reports-comparison-btn {
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  background: none;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.reports-comparison-btn:hover {
