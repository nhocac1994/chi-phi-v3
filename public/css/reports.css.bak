}

.reports-comparison-btn.active {
  background: var(--primary);
  color: white;
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .reports-main {
    padding: 1rem;
  }
  
  #detail-table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    font-size: 0.9rem;
